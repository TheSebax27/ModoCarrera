                                        <Label Text="{Binding Name}" 
                                           TextColor="White" 
                                           FontSize="16" 
                                           FontAttributes="Bold"/>
                                        <Label Text="{Binding Type}" 
                                           TextColor="#00D4FF" 
                                           FontSize="14"/>
                                    </StackLayout>

                                    <!-- Year and Club -->
                                    <StackLayout Grid.Row="1" Grid.Column="1" Spacing="2">
