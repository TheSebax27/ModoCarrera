                                            HeightRequest="40"
                                            CornerRadius="20"
                                            CommandParameter="{Binding}"
                                            Clicked="OnDeleteTitleClicked"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Button -->
