<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModoCarreraFC25.Views.SeasonsPage"
             Title="Temporadas"
             BackgroundColor="#0D1421">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="20">

        <!-- Header -->
        <StackLayout Grid.Row="0" Spacing="10" Margin="0,10,0,20">
            <Label Text="ðŸ“… GestiÃ³n de Temporadas" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   TextColor="#00D4FF" 
                   HorizontalOptions="Center"/>

            <Label Text="Administra las temporadas de tu carrera" 
                   FontSize="14" 
                   TextColor="#B0C4DE" 
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Career Selector -->
        <Frame Grid.Row="1" 
               BackgroundColor="#1A2332" 
               BorderColor="#00D4FF" 
               CornerRadius="10" 
               Padding="15"
               Margin="0,0,0,20">
            <StackLayout Spacing="10">
                <Label Text="Seleccionar Carrera:" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="White"/>

                <Picker x:Name="CareerPicker" 
                        Title="Selecciona una carrera"
                        FontSize="14"
                        TextColor="White"
                        TitleColor="#B0C4DE"
                        BackgroundColor="#0D1421"
                        SelectedIndexChanged="OnCareerSelected"/>
            </StackLayout>
        </Frame>

        <!-- Seasons List -->
        <CollectionView Grid.Row="2" 
                        x:Name="SeasonsCollectionView" 
                        BackgroundColor="Transparent"
                        SelectionMode="Single"
                        SelectionChanged="OnSeasonSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Frame BackgroundColor="#1A2332" 
                               BorderColor="#444" 
                               CornerRadius="12" 
                               Padding="15"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">

                                <!-- Season Info -->
                                <StackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                                    <Label Text="{Binding Year, StringFormat='Temporada {0}'}" 
                                           FontSize="18" 
                                           FontAttributes="Bold" 
                                           TextColor="#00D4FF"/>

                                    <Label Text="{Binding Club}" 
                                           FontSize="16" 
                                           TextColor="White"/>

                                    <Label Text="{Binding LeaguePosition, StringFormat='PosiciÃ³n en Liga: {0}Â°'}" 
                                           FontSize="14" 
                                           TextColor="#B0C4DE"/>
                                </StackLayout>

                                <!-- Statistics -->
                                <StackLayout Grid.Column="0" Grid.Row="1" 
                                           Orientation="Horizontal" 
                                           Spacing="15" 
                                           Margin="0,10,0,0">
                                    <Label Text="{Binding Wins, StringFormat='V: {0}'}" 
                                           FontSize="12" 
                                           TextColor="#4CAF50"/>

                                    <Label Text="{Binding Draws, StringFormat='E: {0}'}" 
                                           FontSize="12" 
                                           TextColor="#FFC107"/>

                                    <Label Text="{Binding Losses, StringFormat='D: {0}'}" 
                                           FontSize="12" 
                                           TextColor="#F44336"/>

                                    <Label Text="{Binding Points, StringFormat='Pts: {0}'}" 
                                           FontSize="12" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                </StackLayout>

                                <!-- Goals -->
                                <StackLayout Grid.Column="0" Grid.Row="2" 
                                           Orientation="Horizontal" 
                                           Spacing="10" 
                                           Margin="0,5,0,0">
                                    <Label Text="{Binding GoalsFor, StringFormat='GF: {0}'}" 
                                           FontSize="12" 
                                           TextColor="#4CAF50"/>

                                    <Label Text="{Binding GoalsAgainst, StringFormat='GC: {0}'}" 
                                           FontSize="12" 
                                           TextColor="#F44336"/>

                                    <Label Text="{Binding GoalDifference, StringFormat='Dif: {0:+#;-#;0}'}" 
                                           FontSize="12" 
                                           TextColor="White"/>
                                </StackLayout>

                                <!-- Action Button -->
                                <Button Grid.Column="1" Grid.RowSpan="3"
                                        Text="âœï¸" 
                                        FontSize="20"
                                        BackgroundColor="#00D4FF" 
                                        TextColor="White"
                                        CornerRadius="20"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        VerticalOptions="Center"
                                        Clicked="OnEditSeasonClicked"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add Season Button -->
        <Button Grid.Row="3" 
                Text="âž• Agregar Nueva Temporada" 
                FontSize="16" 
                FontAttributes="Bold"
                BackgroundColor="#00D4FF" 
                TextColor="White" 
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,20,0,0"
                Clicked="OnAddSeasonClicked"/>
    </Grid>
</ContentPage>